// C++

class Solution {
public:
    int reverse(int x) {
        int newX = 0;
        while (x != 0){
            if (newX == 214748364 && x > 7) return 0;
            if (newX > 214748364) return 0;
            if (newX == -214748364 && x > 8) return 0;
            if (newX < -214748364) return 0;
            newX = newX * 10 + x % 10;
            x /= 10;
        }
        return newX;
    }
};

